<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.SecondActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TÃ­tulo de la actividad"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/activityType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de actividad"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/fechaIni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha inicio"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/fechaIni_dato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy - hh:mm"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/fechaFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha fin"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/fechaFin_dato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd/mm/yyyy - hh:mm"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"/>


            <TextView
                android:id="@+id/periocidad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Periocidad"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="7dp">

                <TextView
                    android:id="@+id/circulo_lunes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"

                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="L"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_martes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="M"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_miercoles"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="Mie"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_jueves"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="J"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_viernes"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="V"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_sabado"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:text="S"
                    android:textColor="#000000"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/circulo_domingo"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/circle_selected"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:text="D"
                    android:textColor="#000000"
                    android:textSize="15dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/lugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lugar"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>
            <TextView
                android:id="@+id/lugar_dato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETSIST, Campus sur UPM"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"/>

            <fragment
                android:id="@+id/activity_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="25dp"
                map:cameraZoom="10"
                map:mapType="normal"
                map:uiRotateGestures="false"
                map:uiScrollGestures="false"
                map:uiZoomControls="true" />


            <Button
                android:id="@+id/mapButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Abrir en Maps"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"/>


            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>


            <Button
                android:id="@+id/linkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver web oficial"
                android:textSize="15sp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="25dp"/>







        </LinearLayout>




    </ScrollView>


    <ImageButton
        android:id="@+id/fav_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:contentDescription="Boton me interesa"
        android:background="@null"
        android:src="@drawable/favourite_45" />


</LinearLayout>